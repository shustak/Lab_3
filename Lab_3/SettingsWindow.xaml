<Window x:Class="GraphicsEditor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Line Color"/>
            <ComboBox Name="lineColorComboBox">
                <ComboBoxItem Content="Black" Tag="Black" IsSelected="True"/>
                <ComboBoxItem Content="Red" Tag="Red"/>
                <ComboBoxItem Content="Green" Tag="Green"/>
                <ComboBoxItem Content="Blue" Tag="Blue"/>
            </ComboBox>
            <Label Content="Fill Color" Margin="0,10,0,0"/>
            <ComboBox Name="fillColorComboBox">
                <ComboBoxItem Content="White" Tag="White" IsSelected="True"/>
                <ComboBoxItem Content="Yellow" Tag="Yellow"/>
                <ComboBoxItem Content="Gray" Tag="Gray"/>
                <ComboBoxItem Content="Cyan" Tag="Cyan"/>
            </ComboBox>
            <Label Content="Line Thickness" Margin="0,10,0,0"/>
            <TextBox Name="lineThicknessTextBox" Text="1.0"/>
            <Button Content="OK" Width="75" Margin="0,20,0,0" HorizontalAlignment="Center" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
